{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es2016",
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "types",
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}