{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017", "es2019.array"],
    "baseUrl": "src",
    "rootDir": "src",
    "jsx": "react",
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}